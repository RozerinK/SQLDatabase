<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sqldatabase.MainActivity"
    android:orientation="vertical">



    <EditText
        android:id="@+id/activity_main_edt_id"
        android:layout_width="match_parent"
        android:hint="put when you delete or update person"
        android:layout_height="wrap_content"
        />
    <EditText
        android:id="@+id/activity_main_edt_name"
        android:layout_width="match_parent"
        android:hint="@string/name"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/activity_main_edt_surname"
        android:layout_width="match_parent"
        android:hint="@string/surname"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/activity_main_button_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Person" />

    <Button
        android:id="@+id/activity_main_button_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Person" />

    <Button
        android:id="@+id/activity_main_button_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete Person" />
    <Button
        android:id="@+id/activity_main_button_show_person"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show Person" />
    <TextView
        android:hint="id   name   surname"
        android:id="@+id/activity_main_txt_column_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:hint="all person in your database"
        android:id="@+id/activity_main_txt_allperson"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
